<Window x:Class="tests.Logger.LoggerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tests.Logger"
        mc:Ignorable="d"
        Title="LoggerWindow" Height="450" Width="800">
    <Grid>
        <Button Click="Button_Click" Content="Button_Click" Margin="0,30,0,0"/>
        <Button Click="Button_Click2" Content="Button_Click2" Margin="0,60,0,0"/>
        <Button Click="Button_Click3" Content="Button_Click3" Margin="0,90,0,0"/>
        <TextBlock x:Name="TextBlock1" 
                   FontFamily="Harlow Solid Italic" FontSize="36"
                   TextAlignment="Center" Margin="5,0,10,0"
                   Text="00:00:00" FontWeight="Bold" 
                   VerticalAlignment="Top" HorizontalAlignment="Left"/>
    </Grid>
</Window>
